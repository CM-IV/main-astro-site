{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.global.activeMode": "",
  "frontMatter.custom.scripts": [
    {
      "title": "Deploy to GitHub",
      "id": "deploy-to-github",
      "script": "./src/scripts/deploy-to-github.sh",
      "command": "bash"
    }
  ],
  "frontMatter.global.modes": [
    {
      "id": "minimal",
      "features": [
        "panel.metadata",
        "panel.seo",
        "panel.globalSettings"
      ]
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Draft status",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Snippet",
          "name": "snippet",
          "type": "string"
        },
        {
          "title": "Preview Image",
          "type": "fields",
          "name": "image",
          "fields": [
            {
              "title": "Source",
              "name": "src",
              "type": "string"
            },
            {
              "title": "Alt",
              "name": "alt",
              "type": "string"
            }
          ]
        },
        {
          "title": "Publishing date",
          "name": "publishDate",
          "type": "datetime",
          "isPublishDate": true
        },
        {
          "title": "Category",
          "name": "category",
          "type": "string"
        },
        {
          "title": "Author",
          "name": "author",
          "type": "string"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        }
      ]
    }
  ],
  "frontMatter.taxonomy.dateFormat": "Pp",
  "frontMatter.framework.id": "astro",
  "frontMatter.content.publicFolder": "public",
  "frontMatter.preview.host": "http://localhost:3000/blog",
  "frontMatter.content.supportedFileTypes": [
    "md",
    "markdown",
    "mdx"
  ],
  "frontMatter.content.pageFolders": [
    {
      "title": "blog",
      "path": "[[workspace]]/src/content/blog"
    }
  ],
  "frontMatter.framework.startCommand": "pnpm run dev"
}