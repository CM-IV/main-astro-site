---
const { page } = Astro.props;
---

<div class="flex gap-x-4 pt-6 pl-6">
    {page.url.prev ? (
        <!-- Previous Button -->
        <a href={page.url.prev} class="flex items-center justify-center px-3 h-8 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
            Newer Posts
        </a>
    ) : (
        <!-- Previous Button -->
        <a href={page.url.prev} onclick="return false;" class="disabled:opacity-75 not-allowed flex items-center justify-center px-3 h-8 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
            Newer Posts
        </a>
    )}
  
    {page.url.next ? (
        <!-- Next Button -->
        <a href={page.url.next} class="flex items-center justify-center px-3 h-8 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
            Older Posts
        </a>
    ) : (
        <!-- Previous Button -->
        <a href={page.url.next} onclick="return false;" class="disabled:opacity-75 not-allowed flex items-center justify-center px-3 h-8 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
            Older Posts
        </a>
    )}
</div>

<style>
    .not-allowed{
        cursor: not-allowed !important;  
    }
</style>