---
import Config from "../main.config.mjs";

const linuxFileUrl = Config.socialMedia.linuxFileUrl
const winFileUrl = Config.socialMedia.winFileUrl;
---
<section>
    <strong><p>Web Image Optimizer</p></strong>
    <div class="flex-container">
        <div>
            <div class="terminal-card">
                <header>Linux</header>
                <div id="links">
                    <a  href={linuxFileUrl}>AppImage Download</a>
                </div>
                <div id="links">
                    <a href="/256x256.png" download>Icon Download</a>
                </div>
                <div id="links">
                    <a href="/linuxChecksum/sha512sum.txt" download>sha512sum</a>
                </div>
            </div>
        </div>
        <div>
            <div class="terminal-card">
                <header>Windows</header>
                <div id="links">
                    <a href={winFileUrl}>Installer Download (.exe)</a>
                </div>
                <div id="links">
                    <a href="/winChecksum/sha512sum.txt" download>sha512sum</a>
                </div>
            </div>
        </div>
    </div>
</section>