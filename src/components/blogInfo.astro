---
import Author from './author.astro';

export interface Props {
  title: string;
  author: string;
  publishDate: string;
}

const { title, publishDate } = Astro.props;
---
<section>
  <article>
    <div>
      <header>
        <p>{publishDate}</p>
        <h1>{title}</h1>
        <Author name="CM-IV" />
      </header>
      <slot />
    </div>
  </article>
</section>